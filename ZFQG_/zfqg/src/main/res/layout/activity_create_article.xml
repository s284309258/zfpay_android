<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/custom_transparent_tool_bar"/>
    <LinearLayout
        android:orientation="vertical"
        android:background="#f5f5f5"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <EditText
            android:background="@null"
            android:layout_weight="1"
            android:gravity="top|left"
            android:id="@+id/edit_"
            android:textCursorDrawable="@null"
            android:textSize="14sp"
            android:padding="10dp"
            android:hint="@string/请输入文章链接部分链接可能无法解析"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:id="@+id/tv_plate"
            android:layout_width="wrap_content"
            android:text="@string/粘贴"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/shape_gray_stroke"
            android:layout_marginBottom="15dp"
            android:textColor="@color/text_color_main_gray"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/tv_next"
        android:layout_marginTop="30dp"
        android:paddingTop="10dp"
        android:enabled="false"
        android:textColor="@color/white"
        android:background="@drawable/selector_shape_yello_btn"
        android:paddingBottom="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="@string/下一步"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="@string/温馨提示"
            android:textColor="#bebebe"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="3dp"
            android:lineSpacingExtra="3dp"
            android:text="@string/create_article_tips"
            android:layout_width="match_parent"
            android:textSize="13sp"
            android:textColor="#bebebe"
            android:layout_height="wrap_content" />
    </LinearLayout>


</LinearLayout>