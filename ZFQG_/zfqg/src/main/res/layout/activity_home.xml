    <FrameLayout
        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/xx"/>

    <View
        android:id="@+id/xx"
        style="@style/horizontal_line"
        android:layout_above="@+id/main_bottom_menu" />

    <LinearLayout
        android:id="@+id/main_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/home_tab_news" />

            <TextView
                android:layout_marginTop="3dp"
                style="@style/black_yellow_text_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_news"
                android:textSize="12sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/home_tab_map" />

            <TextView
                android:layout_marginTop="3dp"
                style="@style/black_yellow_text_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_map"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/home_tab_task" />

            <TextView
                android:layout_marginTop="3dp"
                style="@style/black_yellow_text_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_task"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:src="@drawable/home_tab_person_center" />

            <TextView
                android:layout_marginTop="3dp"
                style="@style/black_yellow_text_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/home_my"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_login_tabs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        >

        <View
            android:id="@+id/tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="0dp"
            android:id="@+id/tab2"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:id="@+id/tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:id="@+id/tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</RelativeLayout>