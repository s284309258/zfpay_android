<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:paddingLeft="15dp"
    android:paddingTop="10dp"
    android:paddingRight="15dp"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_img"
        android:layout_width="120dp"
        android:layout_alignParentRight="true"
        android:src="@mipmap/icon_zixun_temp"
        android:scaleType="centerCrop"
        android:layout_height="90dp" />
    <TextView
        android:id="@+id/tv_title"
        android:layout_toLeftOf="@id/iv_img"
        android:ellipsize="end"
        android:paddingRight="8dp"
        android:text="那些年妈妈们最爱买的十大水果，别承认，至关重要"
        android:layout_width="match_parent"
        android:textColor="@color/text_color_title_black"
        android:textSize="18sp"
        android:maxLines="2"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_source"
        android:layout_alignBottom="@id/iv_img"
        android:text="水果大家庭"
        android:layout_marginRight="15dp"
        android:maxWidth="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_forward_count"
        android:text="2000"
        android:drawableLeft="@mipmap/icon_forward"
        android:drawablePadding="5dp"
        android:layout_toRightOf="@id/tv_source"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/iv_img"
        android:layout_height="wrap_content" />
    <View android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@id/iv_img"
        android:background="@color/color_divider_bbbb"
        android:layout_height="1px"/>
</RelativeLayout>