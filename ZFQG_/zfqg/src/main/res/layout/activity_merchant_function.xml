<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/custom_tool_bar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="30dp"
            android:paddingBottom="15dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/icon_apply"
                android:gravity="center"
                android:text="@string/申请"
                android:textColor="@color/text_color_title_black" />

            <TextView
                android:id="@+id/tv_shenhe_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/selector_points"
                android:enabled="false" />

            <TextView
                android:id="@+id/tv_shenhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/selector_icon_shenhe_gray"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/审核"
                android:textColor="@color/text_color_title_black" />

            <TextView
                android:id="@+id/tv_complete_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="-15dp"
                android:enabled="false"
                android:layout_marginRight="10dp"
                android:drawableTop="@drawable/selector_points"/>

            <TextView
                android:id="@+id/tv_complete"
                android:layout_width="wrap_content"
                android:enabled="false"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/selector_icon_complete_gray"
                android:gravity="center"
                android:text="@string/完成"
                android:textColor="@color/text_color_title_black" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@mipmap/icon_double_xiegang"
            android:drawableRight="@mipmap/icon_double_xiegang"
            android:drawablePadding="10dp"
            android:text="@string/填写店铺信息"
            android:textColor="@color/text_color_title_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/店铺名称"
                android:textColor="@color/text_color_title_black" />

            <EditText
                android:id="@+id/et_mer_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/请输入店铺名称"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color_title_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_divider_bbbb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/联系人"
                android:textColor="@color/text_color_title_black" />

            <EditText
                android:id="@+id/et_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/请输入联系人姓名"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color_title_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_divider_bbbb" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/电话号码"
                android:textColor="@color/text_color_title_black" />

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/请输入电话号码"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color_title_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_divider_bbbb" />

        <LinearLayout
            android:id="@+id/ll_industry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/行业"
                android:textColor="@color/text_color_title_black" />

            <TextView
                android:id="@+id/tv_industry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/请选择店铺行业"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color_title_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_down"
                android:tint="@color/color_divider_bbbb" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@color/color_divider_bbbb" />

        <LinearLayout
            android:id="@+id/ll_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="100dp"
                android:paddingLeft="15dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:text="@string/商户位置"
                android:textColor="@color/text_color_title_black" />

            <TextView
                android:id="@+id/tv_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:hint="@string/请选择店铺地理位置"
                android:paddingTop="12dp"
                android:paddingRight="15dp"
                android:paddingBottom="15dp"
                android:singleLine="true"
                android:textColor="@color/text_color_title_black"
                android:textCursorDrawable="@null"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="15dp"
                android:src="@drawable/arrow_down"
                android:tint="@color/color_divider_bbbb" />
        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@mipmap/icon_double_xiegang"
            android:drawableRight="@mipmap/icon_double_xiegang"
            android:drawablePadding="10dp"
            android:text="@string/上传轮播图"
            android:textColor="@color/text_color_title_black" />


        <com.lckj.custom.view.InnerRecyclerView
            android:id="@+id/recycler_view1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.lckj.custom.view.InnerRecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/备注" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:text="@string/_800_800px_2m_jpg_jpeg_png_gif" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/bg_gray" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:drawableLeft="@mipmap/icon_double_xiegang"
            android:drawableRight="@mipmap/icon_double_xiegang"
            android:drawablePadding="10dp"
            android:text="@string/上传营业执照"
            android:textColor="@color/text_color_title_black" />

        <com.lckj.custom.view.InnerRecyclerView
            android:id="@+id/recycler_view2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.lckj.custom.view.InnerRecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/备注" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="8dp"
                android:text="@string/_800_800px_2m_jpg_jpeg_png_gif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_gray">

            <TextView
                android:id="@+id/tv_commit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/selector_shape_yello_btn"
                android:enabled="false"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/确认信息无误立即申请"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>