<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/left_action"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:drawableLeft="@mipmap/black_back_icon"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:textColor="@android:color/black"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tv_pos"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/grren_left_selector"
                android:gravity="center"
                android:text="@string/传统POS"
                android:textColor="@color/white_green"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_mpos"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/green_selector2"
                android:gravity="center"
                android:text="MPOS"
                android:textColor="@color/white_green"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_epos"
                android:layout_width="80dp"
                android:layout_height="28dp"
                android:background="@drawable/grren_right_selector"
                android:gravity="center"
                android:text="EPOS"
                android:textColor="@color/white_green"
                android:textSize="15sp" />
        </LinearLayout>

        <View
            style="@style/horizontal_line"
            android:layout_alignParentBottom="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iv_head_img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="15dp" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_head_img"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_head_img"
            android:layout_toRightOf="@+id/iv_head_img"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_pos_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_phone"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/iv_head_img"
            android:textColor="@color/gray"
            android:textSize="11sp" />

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/iv_head_img"
            android:layout_alignBottom="@+id/iv_head_img"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_boda" />

        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head_img"
            android:layout_marginTop="45dp"
            android:textColor="@color/black"
            android:textSize="11sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_head_img"
            android:layout_marginTop="40dp"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_month_deal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_money"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tv_month_deal"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_gray_line_shape3"
            android:drawableRight="@mipmap/icon_zhankai"
            android:drawablePadding="5dp"
            android:paddingLeft="15dp"
            android:paddingTop="2dp"
            android:paddingRight="15dp"
            android:paddingBottom="2dp"
            android:text="2019-08"
            android:textColor="@color/gray"
            android:textSize="11sp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/bg_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/全部"
                android:textColor="@color/green_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/xx"
                android:layout_width="45dp"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/green2"
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_already_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_already_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/已交易"
                android:textColor="@color/green_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/xx2"
                android:layout_width="45dp"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/green2"
                android:visibility="invisible" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_no_deal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_no_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/未交易"
                android:textColor="@color/green_black"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/xx3"
                android:layout_width="45dp"
                android:layout_height="2dp"
                android:layout_marginTop="6dp"
                android:background="@color/green2"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>