<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_white_shape"
    android:padding="15dp">

    <ImageView
        android:id="@+id/iv_head_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/icon_logo" />

    <TextView
        android:id="@+id/tv_title"
        style="@style/black_text_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/iv_head_img"
        android:singleLine="true"
        android:text="心灵鸡汤" />

    <TextView
        android:id="@+id/tv_money"
        style="@style/black_text_20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_centerVertical="true"
        android:text="0.02金币/次" />

    <TextView
        android:id="@+id/tv_count"
        style="@style/gray_text_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_title"
        android:layout_alignBottom="@+id/iv_head_img"
        android:text="已有33人分享了该任务" />

    <TextView
        android:id="@+id/tv_check"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_icon_tick_ennable"
        android:enabled="false" />

    <Button
        android:id="@+id/btn_share"
        style="@style/orange_text_16"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/bg_orange_line_shape"
        android:text="@string/fenxiangjizhuan"
        tools:visibility="gone" />

</RelativeLayout>