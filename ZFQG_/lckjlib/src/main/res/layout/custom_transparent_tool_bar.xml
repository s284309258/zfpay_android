<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/tool_bar"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/action_bar_height"
    app:contentInsetStart="0.0dip"
    app:title="">

    <TextView
        android:id="@id/left_action"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="left"
        android:drawableLeft="@mipmap/white_back_icon"
        android:gravity="center|left"
        android:paddingLeft="@dimen/dp_size_16"
        android:paddingRight="@dimen/dp_size_16"
        tools:text="@string/back"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />

    <TextView
        android:id="@id/custom_title"
        style="@style/TitleTheme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="标题"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true" />

    <TextView
        android:id="@id/right_action"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_gravity="right"
        android:gravity="center|right"
        android:paddingLeft="@dimen/dp_size_15"
        android:paddingRight="@dimen/dp_size_15"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_15" />
</android.support.v7.widget.Toolbar>